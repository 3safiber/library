<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Tree View -->
  <record id="view_book_tree" model="ir.ui.view">
    <field name="name">Book Tree View</field>
    <field name="model">book.model</field>
    <field name="arch" type="xml">
      <tree multi_edit='1'>
        <field name="name" />
        <field name="description" />
        <field name="date_availability" />
        <field name="selling_price" />
        <field name="bedrooms" />
        <field name="postcode" optional="1" />
        <field name="expected_price" optional="1" />
        <field name="living_area" optional="1" />
        <field name="facades" optional="1" />
        <field name="garage" optional="1" />
        <field name="garden_area" optional="1" />
        <field name="state" />
        <!-- Add other fields here -->
      </tree>
    </field>
  </record>

  <!-- Form View (Optional) -->
  <record id="view_book_form" model="ir.ui.view">
    <field name="name">Book Form View</field>
    <field name="model">book.model</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <header>

            <button name="action_draft" string="Set to draft" type="object"
              class="btn-primary"
              invisible="state == 'draft'"
            />
            <button name="action_bending" string="Bending" type="object"
              class="btn-secondary" invisible="state != 'draft'" />
            <button name="action_sold" string="Sold" type="object"
              class="btn-success" invisible="state != 'bending'" />
            <field name="state" widget="statusbar" />

          </header>
          <group>
            <group>
              <field name="name" />
              <field name="description" />
              <field name="increment"
                readonly="1"
              />
              <field name="date_availability" />
              <field name="expected_price" />
              <field name="selling_price" />
              <field name="diff" />
            </group>
            <group>
              <field name="bedrooms" />
              <field name="postcode" />
              <field name="living_area" />
              <field name="facades" />
              <field name="garage" />
              <field name="garden_area" />
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>
  <!-- Action -->
  <record id="action_book" model="ir.actions.act_window">
    <field name="name">Book</field>
    <field name="res_model">book.model</field>
    <field name="view_mode">tree,form</field>
    <!-- Form,Kanban,Calendar ,Graph ,Gantt ,Pivot ,Search
      ,Activity,Map,Cohort -->
    <!-- Optionally, set default view_id -->
    <!-- <field name="view_id" ref="view_book_tree"/> -->
  </record>

  <!-- Menu Items -->
  <menuitem id="books_menu" name="Books" parent="shelves_main_menu" action="action_book"
    sequence="10" />

</odoo>