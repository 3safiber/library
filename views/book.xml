<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
  <record id="view_book_tree" model="ir.ui.view">
      <field name="name">Book Tree View</field>
      <field name="model">book.model</field>
      <field name="arch" type="xml">
          <tree>
              <field name="name"/>
              <!-- Add other fields here -->
          </tree>
      </field>
  </record>
    <!-- Action -->
  <record id="action_book" model="ir.actions.act_window">
      <field name="name">My Model</field>
      <field name="res_model">book.model</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_book_tree"/>
  </record>

  <!-- Menu Items -->
  <menuitem id="parent_menu_id" name="Book Module"/>
  <menuitem id="menu_book" name="Book" parent="parent_menu_id" action="action_book" sequence="10"/>

</odoo>